
@{
    ViewData["Title"] = "Quản lý phân quyền";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .token-input-list, ul.token-input-list-facebook {
        width: 100% !important;
    }
</style>

<div class="row-main container flex">
    <div class="row-main_col200">
        <h2 class="title_page">Nhóm quyền</h2>
        <div class="wrap_bg wrap_bg2">
            <div class="vai-tro">
                <h3 class="title-margin">Tên người dùng</h3>
                <input type="text" id="token-input-user" placeholder="Nhập tên">
            </div>
        </div>
    </div>
    <div class="row-main_col800">
        <div class="flex row-main-head">
            <div class="search-wrapper">
                <input type="text" class="input_search onclick-togle" id="ip-kup-search-role" placeholder="Tên nhóm" />
                <span class="search-btn">
                    <button type="button">
                        <svg class="icon-svg">
                            <use xlink:href="images/icons/icon.svg#search"></use>
                        </svg>
                    </button>
                </span>
            </div>
            <div class="btn-right text-right">
                <button class="btn btn-default" onclick="_role.OnOpenCreateForm()">
                    + Thêm mới
                </button>
            </div>
        </div>
        <div class="wrap_bg wrap_bg_no-padding mb20">
            <div class="table-responsive table-default" id="grid-data">

            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/modules/role.js"></script>
}